[Unit]
Description=Wg portal systemd service
After=network.target

[Service]
ExecStart={{ wireguard_portal_binary_directory }}/wg-portal
StandardOutput=append:{{ wireguard_portal_log_file_path }}
StandardError=append:{{ wireguard_portal_log_file_path }}
Restart=on-failure
User=root
Group=root
Environment="WG_PORTAL_CONFIG={{ wireguard_portal_binary_directory }}/config/config.yml"

[Install]
WantedBy=multi-user.target
